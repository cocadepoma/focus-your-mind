{
  "name": "Focus your mind",
  "description": "Sets a schedule time for focusing and for resting, be productive!",
  "version": "1.0.1",
  "manifest_version": 3,
  "permissions": [
    "alarms",
    "storage",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Focus your mind",
    "default_popup": "index.html"
  },
  "icons": {
    "16": "./icons/purple/16-purple.png",
    "32": "./icons/purple/32-purple.png",
    "48": "./icons/purple/48-purple.png",
    "128": "./icons/purple/128-purple.png"
  }
}