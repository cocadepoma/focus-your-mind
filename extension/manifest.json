{
  "name": "Focus your mind",
  "description": "Sets a schedule time for focusing and for resting, be productive!",
  "version": "1.0.0",
  "manifest_version": 3,
  "permissions": [
    "alarms",
    "notifications",
    "storage",
    "tabs",
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Focus your mind",
    "default_popup": "index.html"
  },
  "icons": {
    "16": "./icons/green/16-green.png",
    "32": "./icons/green/32-green.png",
    "48": "./icons/green/48-green.png",
    "128": "./icons/green/128-green.png"
  }
}